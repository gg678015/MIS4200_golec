@model IEnumerable<MIS4200_golec.Models.Employeer>

@{
    ViewBag.Title = "List of Employeers";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Employeer", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.lastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.firstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.employeerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.employeerId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.employeerId })
        </td>
    </tr>
}

</table>
